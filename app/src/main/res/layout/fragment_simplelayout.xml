<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/kuma_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="Kuma" />

        <Button
            android:id="@+id/maku_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="Maku" />

        <Button
            android:id="@+id/hoge_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/kuma_button"
            android:layout_toLeftOf="@id/maku_button"
            android:text="hoge" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/kuma_button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="Kuma" />

        <RelativeLayout
            android:id="@+id/button_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true" >

            <Button
                android:id="@+id/maku_button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Maku" />

        </RelativeLayout>

        <SeekBar
            android:id="@+id/musicPlayerVolume"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/kuma_button2"
            android:layout_toLeftOf="@id/button_container"
            android:layout_centerVertical="true"
            android:progress="0" />

    </RelativeLayout>
</LinearLayout>